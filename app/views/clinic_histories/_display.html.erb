




<table class="table table-bordered" style="margin-top:-30px;">
  

<tr>
      <th  colspan="5">
        
                            <%= form_tag request.path, :method => 'get', :class => '' do %>

<div>
  <div class="row">

    <div class="col-lg-5 ">

            <div class="input-group custom-search-form">
              <%= text_field_tag :search, params[:search], :placeholder => "Busca por el Nombre", :class => 'form-control' %>
              <span class="input-group-btn">


<%= button_tag(type: "submit", class: "btn principal") do %>
              <span class="glyphicon glyphicon-search"></span>
                          <% end %>

             </span>
             </div><!-- /input-group -->
        </div>
  </div>
</div>
                    <% end %>



      </th>

</tr>


  <tr class="header">
    <th>HC #</th>
    <th>Nombre</th>
    <th>Identificación</th>
    <th>Fecha</th>
    <th>Opciones</th>
  </tr>
  
<% @clinic_histories.each do |clinic_history| %>

  <tr>


    <td><%= clinic_history.id %></td>
    <td><%= clinic_history.first_name %></td>
    <td><%= clinic_history.document %></td>
    <td><%= clinic_history.created_at.strftime('%b %d. %Y') %></td>
    <td><%= link_to 'Ver Historia Clinica', patient_clinic_history_path(@patient,clinic_history), :class => "btn btn-info blanco btn-sm" %>  

     &nbsp;  <%= link_to 'Editar Historia Clinica', edit_patient_clinic_history_path(@patient,clinic_history), :class => "btn btn-success blanco btn-sm" %>

     &nbsp; <%= link_to 'Notas de Evolución', patient_clinic_history_progress_notes_path(@patient,clinic_history), :class => "btn btn-primary blanco btn-sm" %></td>


  </tr>
  
<% end %>

</table>


